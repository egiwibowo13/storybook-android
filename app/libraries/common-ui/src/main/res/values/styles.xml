<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/bgScreen</item>
        <item name="colorControlActivated">@color/textMidnight</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppTheme.White">
        <item name="colorPrimary">@color/primaryWhite</item>
        <item name="colorPrimaryDark">@color/primaryWhite</item>
        <item name="colorAccent">@color/red10</item>
    </style>

    <style name="AppTheme.Red">
        <item name="colorPrimary">@color/primaryRed</item>
        <item name="colorPrimaryDark">@color/primaryRed</item>
    </style>

    <style name="ShapeAppearanceOverlay.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

</resources>
